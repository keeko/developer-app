<div class="row">
	<div class="col-md-8">{{ content|raw }}</div>
	<div class="col-md-4">

		<div class="panel-group" id="menu">
			{% for topic, item in menu %}
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a data-toggle="collapse" {% if topic != current %}class="collapsed"{% endif %}  data-parent="#menu" href="#collapse-{{ topic }}"><i class="fa fa-chevron-down"></i></a>			
						<a href="{{ base }}guides/{{ topic }}">{{ item.title }}</a>
					</h4>
				</div>
				<div id="collapse-{{ topic }}" class="panel-collapse collapse {% if topic == current %}in{% endif %}">
					<div>
						<ul class="operation-nav">
							{% for id, title in item.chapters %}
							<li>
								<a href="{{ base }}guides/{{ topic }}#{{ id }}">{{ title }}</a>
							</li>
							{% endfor %}
						</ul>
      				</div>
    			</div>
    		</div>
  			{% endfor %}
  		</div>
	</div>
</div>